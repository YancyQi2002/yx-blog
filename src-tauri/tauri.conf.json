{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "yx-blog",
  "version": "0.1.0",
  "identifier": "com.yancy.dev",
  "build": {
    "frontendDist": "../build",
    "devUrl": "http://localhost:3000",
    "beforeDevCommand": "bun run start",
    "beforeBuildCommand": "bun run build"
  },
  "app": {
    "windows": [
      {
        "center": true,
        "title": "yx-blog",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "windows": {
      "allowDowngrades": true,
      "certificateThumbprint": null,
      "digestAlgorithm": null,
      "nsis": {
        "compression": "lzma",
        "displayLanguageSelector": true,
        "headerImage": "icons/icon.ico",
        "installerIcon": "icons/icon.ico",
        "installerHooks": "./windows/hooks.nsh",
        "installMode": "currentUser",
        "languages": [
          "SimpChinese",
          "TradChinese",
          "Japanese",
          "English",
          "Russian"
        ],
        "sidebarImage": "icons/icon.ico"
      },
      "signCommand": null,
      "timestampUrl": null,
      "tsp": false,
      "webviewInstallMode": {
        "silent": true,
        "type": "embedBootstrapper"
      },
      "wix": {
        "language": [
          "en-US",
          "zh-CN",
          "zh-TW",
          "ru-RU"
        ]
      }
    }
  }
}
